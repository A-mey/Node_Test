<html>
    <head>
        <title>
        </title>
    </head>
    <body>
        <table>
            <thead>
                <td>Id</td>
                <td>Category</td>
            </thead>
            <tbody>
                <% 
                if(data.length){
                    for(var i=0; i<data.length; i++) {
                %>
                    <tr>
                        <form method="GET" action="/deleteCategory/<%= data[i].CategoryId %>">
                            <td>
                                <%= data[i].CategoryId %>
                            </td>
                            <td>
                                <a href="products/<%= data[i].CategoryId %>"><%= data[i].CategoryName %></a>
                            </td>
                            <td>
                                <button type="submit">Delete</button>
                            </td>
                        </form>
                        <td><a href="editCategory/<%= data[i].CategoryId %>">Edit</a></td>
                    </tr>
                <%    
                    }
                }
                %>
            </tbody>
        </table>
        <form method="POST" action="/addCategory">
            <input type="text" name="CategoryName" required/><br>
            <button type="submit">Add</button>
        </form>
    </body>
</html>
